<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression Suite" verbose="1">
    <groups>
        <run>
            <include name="regression"></include>
        </run>
    </groups>
    <listeners>
        <listener class-name="demo.com.tutorialninja.customlisteners.CustomListeners"/>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
    </listeners>
    <test name="Regression Test">
        <classes>
            <class name="demo.com.tutorialninja.testsuite.MyAccountPageTest"/>
            <class name="demo.com.tutorialninja.testsuite.TopMenuPageTest"/>
            <class name="demo.com.tutorialninja.testsuite.DesktopPageTest"/>
            <class name="demo.com.tutorialninja.testsuite.LaptopsAndNotebooksPageTest"/>
        </classes>
    </test>
</suite>